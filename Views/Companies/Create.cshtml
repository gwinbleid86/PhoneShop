@model Company
@{ ViewData["Title"] = "Add new company";
    Layout = "_Layout"; }

<h2>Fill out the form to add a company</h2>
<div class="row">
    <div class="phone_add_form col-md-6">
        <form asp-action="Create" method="post">
            <div class="form_row">
                <label for="">
                    Name
                    <input asp-for="Name" type="text">
                </label>
            </div>
            <button type="submit">Create</button>
        </form>
    </div>
</div>