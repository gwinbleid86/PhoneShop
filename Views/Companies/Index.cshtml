@model List<Company>

@{ ViewBag.Title = "Companies";
    Layout = "_Layout"; }

<h2>Companies</h2>
<a asp-action="Create" asp-controller="Companies">Create new</a>
<div class="table_section">
    @if (@Model.Count == 0)
    {
<p>Companies not added yet</p> }
else
{
<table style="width: 100%;">
    <tr>
        <th>Id</th>
        <th>Name</th>
    </tr>
    @foreach (var item in @Model)
    {
<tr>
    <td>@item.Id</td>
    <td>@item.Name</td>
</tr>}

</table>}
</div>